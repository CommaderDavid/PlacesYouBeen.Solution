@using PlacesYouBeen.Models;

<h1>Places You've Been:</h1>

@if (Model.Count == 0)
{
    <p>You haven't Recored any Places.</p>
}
<ul>
    @foreach (Place place in Model)
    {
        <li><a href="/places/@place.Id">@place.CityName</a></li>
    }
</ul>

<a href="/places/new">Add a new Journal Entry.</a> <br>

<form action="/places/delete" method="POST">
    <button type="submit" name="button">Clear all Journal Entries.</button>
</form>