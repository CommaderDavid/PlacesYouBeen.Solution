<form action="/places" method="post">
    <label for="cityName">Add a new City:</label>
    <input type="text" name="cityName" id="cityName" required> <br>
    <label for="duration">How long did you stay:</label>
    <input type="text" name="duration" id="duration" required> <br>
    <label for="group">Did you travel with anyone:</label>
    <input type="text" name="group" id="group" required> <br>
    <label for="journalEntry">Main Journal Entry:</label>
    <input type="text" name="journalEntry" id="journalEntry" required> <br>
    <button type="submit">Submit</button>
</form>